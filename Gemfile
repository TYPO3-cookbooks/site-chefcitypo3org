  gem 'berkshelf'
  gem 'chefspec'
  gem 'knife-cookbook-doc'
  gem 'parallel'
  gem 'foodcritic'
  gem 'rake'
  gem 'serverspec'
  gem 'gitlab'
  gem 'guard'
  gem 'guard-bundler', require: false
  gem 'guard-shell', require: false
  gem 'terminal-notifier-guard'
  gem 'thor-scmversion'
end